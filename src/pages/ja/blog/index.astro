---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import FormattedDate from '../../../components/FormattedDate.astro';

import '../../../styles/pages/blog.css';

import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';

const posts = (await getCollection('blog'))
	.filter(post => post.data.lang === 'ja')
	.map(post => {
		const idWithoutLang = post.id.replace(/^ja\//, '');
		const slugWithoutLang = post.slug.replace(/^ja\//, '');

		return {
			...post,
			id: idWithoutLang,
			slug: slugWithoutLang,
		};
	})
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="posts-list">
				<ul class="posts-list__items">
					{
						posts.map((post) => (
							<li class="posts-list__item">
								<a href={`/ja/blog/${post.slug}/`} class="posts-list__link">
									<div class="posts-list__image-container">
										<Image
											class="post-image"
											width={200}
											height={200}
											loading="eager"
											src={post.data.heroImage}
											alt={`記事のイラスト：${post.data.title}`}
										/>
									</div>
									<h4 class="posts-list__title">{post.data.title}</h4>
									<p class="posts-list__date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
